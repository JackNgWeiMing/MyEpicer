<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/txtCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:text="Recommanded"
            android:textAppearance="@style/TextAppearance.AppCompat.Body2"
            android:textSize="18dp"
            android:textStyle="bold"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textSearch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="169dp"
            android:layout_marginTop="2dp"
            android:text="Search"
            app:layout_constraintLeft_toRightOf="@+id/txtCategory"
            app:layout_constraintTop_toTopOf="parent" />

        <View
            android:id="@+id/horizontalline1"
            android:layout_width="240dp"
            android:layout_height="1dp"
            android:layout_marginLeft="1dp"
            android:layout_marginStart="1dp"
            android:background="@android:color/darker_gray"
            app:layout_constraintLeft_toLeftOf="@+id/txtCategory"
            app:layout_constraintTop_toBottomOf="@+id/txtCategory" />

        <ImageView
            android:id="@+id/imageSearch"
            android:layout_width="29dp"
            android:layout_height="28dp"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:layout_marginTop="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.839"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.523"
            app:srcCompat="@drawable/search" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="318dp"
            android:layout_height="181dp"
            android:layout_marginLeft="29dp"
            android:layout_marginStart="29dp"
            android:layout_marginTop="8dp"
            android:orientation="vertical"
            android:weightSum="1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/txtCategory">

            <TextView
                android:id="@+id/txtRecipeTitle1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.03"
                android:text="Description" />

            <ImageView
                android:id="@+id/DishImage1"
                android:layout_width="302dp"
                android:layout_height="94dp"
                android:layout_marginRight="25dp"
                app:srcCompat="@drawable/chinese_steamed_egg2" />

            <LinearLayout
                android:layout_width="302dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:background="@drawable/btnborder"
                android:orientation="horizontal">

                <!--Icon bar-->
                <ImageButton
                    android:id="@+id/btnLevel"
                    android:layout_width="31dp"
                    android:layout_height="27dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/chef" />

                <TextView
                    android:id="@+id/txtLevel"
                    android:layout_width="28dp"
                    android:layout_height="wrap_content"
                    android:text="Beg" />

                <ImageButton
                    android:id="@+id/btnTime"
                    android:layout_width="29dp"
                    android:layout_height="27dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/clock" />

                <TextView
                    android:id="@+id/txtTime"
                    android:layout_width="43dp"
                    android:layout_height="wrap_content"
                    android:text="30min" />

                <ImageButton
                    android:id="@+id/btnCost"
                    android:layout_width="30dp"
                    android:layout_height="27dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/money" />

                <TextView
                    android:id="@+id/txtCost"
                    android:layout_width="45dp"
                    android:layout_height="wrap_content"
                    android:text="SGD10" />

                <ImageButton
                    android:id="@+id/btnRight"
                    android:layout_width="41dp"
                    android:layout_height="match_parent"
                    android:background="@android:color/transparent"
                    android:src="@drawable/chevron" />

                <ImageButton
                    android:id="@+id/btnAddtoCook"
                    android:layout_width="29dp"
                    android:layout_height="28dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/nfav" />

                <ImageButton
                    android:id="@+id/imageButton6"
                    android:layout_width="match_parent"
                    android:layout_height="28dp"
                    android:background="@android:color/transparent"
                    android:scaleType="fitXY"
                    android:src="@drawable/plus" />

            </LinearLayout>
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>


</LinearLayout>